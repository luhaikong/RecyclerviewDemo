<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.meituan.recyclerviewdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".MyApplication"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".recycler.gridlayout.RecyclerViewGridActivity"/>
        <activity android:name=".recycler.custom.RecyclerViewCustomActivity"/>
        <activity android:name=".recycler.linearlayout.RecyclerViewLinearActivity"/>
        <activity android:name=".recycler.pinned.RecyclerViewPinnedActivity"/>
        <activity android:name=".recycler.staggeredgrid.RecyclerViewStaggeredActivity"/>
    </application>

</manifest>